<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference android:title="Testnet" android:key="testnet" android:defaultValue="false"/>
    <CheckBoxPreference android:title="Disable Wallet" android:key="disablewallet" android:defaultValue="false"/>
    <CheckBoxPreference android:title="Upnp" android:key="upnp" android:defaultValue="false"/>

    <CheckBoxPreference android:title="Pruning" android:key="pruning" android:defaultValue="true"/>
    <CheckBoxPreference android:title="Blocks only" android:key="blocksonly" android:defaultValue="true"/>
    <CheckBoxPreference android:title="Restart on Boot" android:key="restartOnBoot" android:defaultValue="false"/>

    <EditTextPreference android:inputType="number" android:title="Pruning MB" android:key="prune" android:defaultValue="1000" android:dependency="pruning"/>

    <Preference android:title="Datadir" android:key="datadir"/>

    <Preference android:title="@string/pref_title_edit_bitcoin_conf">
        <intent android:action="com.greenaddress.abcore.BitcoinConfEditActivity"/>
    </Preference>

</PreferenceScreen>
